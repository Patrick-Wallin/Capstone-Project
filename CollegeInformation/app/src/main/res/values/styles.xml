<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/holo_blue_light</item>
    </style>

    <style name="SearchDegreesLists" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SearchProgramsLists" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SearchNamesListsVertical" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="SearchNamesListsHorizontal" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="SearchStatesList" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="SearchRegionsList" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ResultsTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="DividerInVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="FindCollegeButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="SplashScreen">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">College Information</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SplashScreenLoading" parent="@style/SplashScreen">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:text">Loading...</item>
        <item name="android:maxLines">10</item>
    </style>

</resources>
