<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_card_view"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    style="@style/card_view_results"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/college_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_desc_college_image" />



        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/college_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_view_result_title" />


            <TextView
                android:id="@+id/college_city_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_view_result_subtitle" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
