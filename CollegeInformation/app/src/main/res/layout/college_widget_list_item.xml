<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/widget_row_item"
    android:contentDescription="@string/content_desc_widget_college"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/college_name_text_view"
        style="@style/NameOnWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/widget_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/NameOnWidget">
        <TextView
            android:id="@+id/college_city_text_view"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/college_state_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>